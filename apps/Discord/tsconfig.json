{
    "compilerOptions": {
        "lib": ["ESNext", "DOM"],
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": false,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./"
    },
    "files": [
        "src/index.ts"
    ],
    "include": ["./src**/*.ts", "../apps/Discord/src/index.ts"],
    "exclude": ["node_modules","dist", "**/*.spec.ts"],
}